body {
    font-family: Arial,Helvetica,sans-serif;
    width: 600px;
    margin: 2em auto;
}

h1 {
    text-align: center;
}

p {
    text-align: justify;
}

table {
    border-collapse: collapse;
}

th, td {
    border: 1px solid #999;
    padding: 5px;
}

h3 {
    margin: 20px 0 5px 0;
}

.packages {
    -webkit-column-count: 2;
    -moz-column-count: 2;
    column-count: 2;
}

.packages a, .packages a:visited {
    text-decoration: none;
    color: blue;
}

.packages a:hover {
    text-decoration: underline;
}
